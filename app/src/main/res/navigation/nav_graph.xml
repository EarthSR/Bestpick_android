<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Fragment ที่เชื่อมโยงกับเมนูใน BottomNavigationView -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.reviewhub.HomeFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.reviewhub.SearchFragment"
        android:label="Search">
        <!-- กำหนด action สำหรับการนำทางจาก SearchFragment ไปยัง PostDetailFragment -->
        <action
            android:id="@+id/action_searchFragment_to_postDetailFragment"
            app:destination="@id/postDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.reviewhub.ProfileFragment"
        android:label="Profile" />

    <!-- Fragment สำหรับ Add Post -->
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.example.reviewhub.AddPostFragment"
        android:label="Add Post" />

    <!-- Fragment ที่ไม่ต้องการแสดง BottomNavigationView -->
    <fragment
        android:id="@+id/postDetailFragment"
        android:name="com.example.reviewhub.PostDetailFragment"
        android:label="Post Detail" />

    <fragment
        android:id="@+id/editprofileFragment"
        android:name="com.example.reviewhub.EditprofileFragment"
        android:label="Edit Profile" />
</navigation>
