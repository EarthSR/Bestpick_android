<resources>
    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- ใช้พื้นหลังแบบโค้งมน -->
        <item name="android:windowBackground">@drawable/dialog_box</item>

        <!-- ปรับแต่งส่วนอื่นๆ เช่น ปุ่ม -->
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CustomPopupMenuHomepage" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
