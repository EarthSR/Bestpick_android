<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- กำหนดสีพื้นหลัง -->
    <solid android:color="@color/white" />

    <!-- กำหนดรัศมีความโค้ง -->
    <corners android:radius="30dp" />

    <!-- ขอบของ Dialog (optional) -->
    <stroke
        android:width="15dp"
        android:color="@color/white" />

    <!-- กำหนด padding ภายใน Dialog -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp"/>
</shape>

